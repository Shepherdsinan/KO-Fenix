
@{
    ViewBag.Title = "duyuruadd";
    Layout = "~/Views/Shared/admin_Layout.cshtml";
}
<div class="page-breadcrumb">
    <div class="row">
        <div class="col-12 d-flex no-block align-items-center">
            <h4 class="page-title">Duyuru Yönetimi</h4>
            <div class="ml-auto text-right">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Panel</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Duyuruadd</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<div class="card">
    <div class="card-body">

        <div class="table-responsive">
            <table id="zero_config" class="table table-striped table-bordered">
            </table>
        </div>

    </div>
</div>

<script>
        $(document).ready(function () {
            veriler();
        });
    function veriler() {
        $("#zero_config").empty();
        $("#zero_config").append('<thead><th>Duyur Başlığı</th><th>Link</th></thead>')
        

        $.ajax({
            url: '/Admin/newsget',
            type: 'POST',
            dataType: 'json',
            success: function (data) {
                $.each(data, function (i, dveri) {
                                       

                    tabledt = '<tbody><tr><td>' + dveri.titletr + '</td><td>' + dveri.link + '</td></tr></tbody>';
                    $("#zero_config").append(tabledt);
                });
            }
        });



    }
</script>

